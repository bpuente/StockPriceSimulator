<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StockPriceSimulator.MainPage">

   <Grid RowSpacing="20" Padding="10">
        <Frame BorderColor="LightGray" Padding="20" CornerRadius="5">
            <VerticalStackLayout Spacing="15">
                   <Label Text="StockPriceViewer" FontSize="24" HorizontalOptions="Center">
                    </Label>
                    <Label Text="StockSymbol>AAPL" FontSize="18" HorizontalOptions="Center"></Label>
                    <StackLayout Orientation="Horizontal" HorizontalOptions="Center" Spacing="10">
                     <Label x:Name="StockPriceLabel" Text="$150.00" FontSize="32"></Label>
                    <Label x:Name="trendIndicastor" Text="-" FontSize="24" TextColor="Gray"></Label>
               </StackLayout>

                <Label x:Name=" LastUpdateLabel" Text="Last update:" HorizontalOptions="Center"></Label> 
            </VerticalStackLayout>
        </Frame>

    </Grid>
</ContentPage>

